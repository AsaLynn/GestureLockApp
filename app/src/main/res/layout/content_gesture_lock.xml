<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF1F5"
    android:orientation="vertical">

    <com.zxn.titleview.TitleView
        android:id="@+id/title_common"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_title_height"
        android:background="@color/colorPrimaryDark"
        app:backIcon="@drawable/icon_return"
        app:titleText="创建手势密码"
        app:titleTextColor="@color/c_ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_60"
            android:background="@drawable/sp_rec_r10_c_ffffff"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="@dimen/dp_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iva"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/unselected" />

                    <ImageView
                        android:id="@+id/ivb"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/unselected" />

                    <ImageView
                        android:id="@+id/ivc"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/unselected" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivd"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/unselected" />

                    <ImageView
                        android:id="@+id/ive"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/unselected" />

                    <ImageView
                        android:id="@+id/ivf"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/unselected" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/unselected" />

                    <ImageView
                        android:id="@+id/ivh"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/unselected" />

                    <ImageView
                        android:id="@+id/ivi"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/unselected" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvWarn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_30"
                android:text="创建手势密码"
                android:textColor="@color/c_474747"
                android:textSize="14sp" />

            <com.zxn.gesturelock.CustomLockView
                android:id="@+id/cl"
                android:layout_width="@dimen/dp_250"
                android:layout_height="@dimen/dp_250"
                android:layout_marginBottom="@dimen/dp_120" />

        </LinearLayout>

        <ImageView
            android:id="@+id/mascot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/icon_mascot_close" />

    </RelativeLayout>


</LinearLayout>